{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Portfolio Server",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/server.js",
      "env": {
        "NODE_ENV": "development",
        "PORT": "3000"
      },
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal",
      "restart": true,
      "runtimeExecutable": "nodemon",
      "runtimeArgs": ["--delay", "500ms"]
    },
    {
      "name": "Launch Portfolio Server (Production Mode)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/server.js",
      "env": {
        "NODE_ENV": "production",
        "PORT": "3000"
      },
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal"
    },
    {
      "name": "Run Tests",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/test/basic-test.js",
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "name": "Debug Payment Flow",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/server.js",
      "env": {
        "NODE_ENV": "development",
        "DEBUG": "stripe:*",
        "PORT": "3000"
      },
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal",
      "stopOnEntry": false,
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}