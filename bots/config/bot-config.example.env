# Domain Bot Configuration
# Copy this file to .env and configure as needed

# Bot scan settings
BOT_SCAN_INTERVAL=300000
MAX_DOMAINS_PER_SCAN=5
MAX_CONCURRENT_BOTS=2

# Directory settings
BOT_DATA_DIR=./bots/data
BOT_LOG_DIR=./bots/logs

# Scheduling
ENABLE_SCHEDULING=true
SCHEDULE_PATTERN=*/30 * * * *

# Output settings
OUTPUT_FORMAT=csv
ENCRYPT_OUTPUT=false

# Rate limiting
WHOIS_RATE_LIMIT=1000

# Security
ROTATE_CREDENTIALS=false
CREDENTIAL_ROTATION_INTERVAL=86400000

# Individual bot settings
NESTED_BOT_ENABLED=true
HIDDEN_BOT_ENABLED=true
UNEXPLORED_BOT_ENABLED=true
UNSEEN_BOT_ENABLED=true
UNFOUND_BOT_ENABLED=true

# Registrar API settings (if using registrar APIs instead of WHOIS)
# REGISTRAR_API_KEY=your_api_key_here
# REGISTRAR_API_SECRET=your_api_secret_here

# Domain acquisition settings (for future implementation)
# AUTO_ACQUIRE_DOMAINS=false
# ACQUISITION_BUDGET=1000
# PAYMENT_METHOD=stripe