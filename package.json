{
  "name": "portfolio-website",
  "version": "1.0.0",
  "description": "Professional portfolio website with payment processing",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "echo 'Static site - no build step required'",
    "test": "npm run test:basic && npm run test:security",
    "test:basic": "node test/basic-test.js",
    "test:security": "npm audit --audit-level moderate",
    "test:syntax": "node -c server.js && node -c script.js",
    "lint": "npm run test:syntax",
    "audit:fix": "npm audit fix",
    "check:outdated": "npm outdated",
    "dev:clean": "rm -rf node_modules package-lock.json && npm install",
    "deploy:heroku": "./deploy.sh",
    "validate": "npm run lint && npm run test && npm run test:security"
  },
  "keywords": [
    "portfolio",
    "payment",
    "stripe",
    "nodejs",
    "express"
  ],
  "author": "Portfolio Owner",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "stripe": "^12.0.0",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}